module odd_number_analyzer(in_number, clock, reset, enable, out_ready, is_odd);
input clock;
input reset;
input enable;
input [31:0] in_number; 
output reg out_ready;
output reg is_odd;

parameter  
	S0=2'b00, // Initial/Reset State
	S1=2'b01, // Condition check State
	S2=2'b10, // Odd State
	S3=2'b11; // Even State
reg [1:0] current_state, next_state;

always @(posedge clock, posedge reset, posedge enable)
begin
	if(reset | !enable)
		current_state <= S0;
	else
		current_state <= next_state;
end

// Next state logic
always @(current_state, in_number[0])
begin
	case(current_state) 
		S0: begin
			next_state <= current_state;
			if(enable)
				next_state <= S1;
		end
		S1: begin
			if(in_number[0])
				next_state <= S2; 
			else
				next_state <= S3;
		end
		S2: begin // ODD STATE
			next_state <= current_state;
		end
		S3: begin // EVEN STATE
			next_state <= current_state;
		end
		default:
			next_state <= S0;
	endcase
end

always @(current_state)
begin 
	case(current_state) 
		S2: begin
			out_ready <= 1;
			is_odd <= 1;
		end
		S3: begin 
			out_ready <= 1;
			is_odd <= 0;
		end
		default:
			out_ready <= 0;
	endcase
end 

endmodule